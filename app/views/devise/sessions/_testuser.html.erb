<h2>ログイン</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

  <div class="field-h">
    <%= f.hidden_field :nickname ,value: "テストユーザー" %>
    <%= f.hidden_field :email ,value: "test@example.com" %>
    <%= f.hidden_field :password ,value: "testtest" %>
  </div>

  <div class="actions-h">
    <%= f.submit "カンタンログイン" %>
  </div>
<% end %>