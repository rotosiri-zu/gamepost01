<div class="contents-row-h">
  <div class="container-h">
    <%= form_for @games, url: gameposts_path, method: :post, multipart: :true do |f| %>
    <h3>投稿する</h3>
    <%= f.file_field :image_file, class:'img-g'%>

    <h3 class="game">ゲーム名</h3>
    <%= f.text_field :name, class:'name-h', placeholder: 'ゲーム名' %>
  
    <h3>platform</h3>
    <%= f.text_field :platform, class:'name-h', placeholder: 'platform' %>

    <h3>genre</h3>
    <%= f.text_field :genre, class:'name-h', placeholder: 'genre' %>

    <h3>ゲームの説明文</h3>
    <%= f.text_area :text, class: 'text-h', placeholder: 'ゲームの説明文を入力してください。' %>
    <%= f.submit '投稿', class: 'button_wrapper-h' %>
    <% end %>
  </div>
</div>