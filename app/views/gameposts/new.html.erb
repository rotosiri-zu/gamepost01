<div class="contents-row-h">
  <div class="container-h">
     <%= form_for @games, url: gameposts_path do |f| %>
      <%= render 'layouts/error_messages', model: f.object %>
      <h3>投稿する</h3>
      <input class="img-g" type="file" name="image">
      <h3 class="game-h">ゲーム名</h3>
      <input class="name-h" placeholder="ゲーム名" type="text" name="name">
      <h3>プラットフォーム</h3>
       <input class="name-h" placeholder="プラットフォーム" type="text" name="platform">
       <h3>ジャンル</h3>
       <input class="name-h" placeholder="ジャンル" type="text" name="genre">
       <h3>ゲームの説明文</h3>
       <textarea class="text-h" placeholder="ゲームの説明文を入力してください。168文字まで" name="text" cols="21" rows="8"></textarea>
      <div class="button_wrapper-h"><input class="btn-h" type="submit" value="送信する"></div>
      <% end %>
  </div>
</div>
