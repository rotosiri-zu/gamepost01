%section.product-container
  .container-box
    %h1.item-name
      = @games.name
    .item-container
      %table.item-table
        %tbody
          %tr
            %th プラットフォーム
            %td= @games.platform
          %tr
            %th ジャンル
            %td= @games.genre
          %tr
            %th.game-text ゲームの説明文
            %td.text-description= @games.text
      .item-imges
        %img.content_post{:src => "#{@games.image}"}/
      = link_to 'レビュー投稿画面', '/gameposts/:gamepost_id/reviews/new', class: 'reviewpostingscreen'
- if user_signed_in? && current_user.id == @games.user_id
  .container-box2
    .item-box
      %a.btn-default.btn-red{:href => "#{@games.id}/edit"} 編集
    %button.btn-default.btn-gray
      %a{:href => "#{@games.id}/destroy"} 削除
.content-box3
  %h4 レビュー一覧
  .h-row
    - if @reviews
      - @reviews.each do |review|
        .a-row
          .review-content
            %span.profile-nickname
              = review.nickname
          .g-row
            %i{:id => "star-rate-#{review.id}"}
            :javascript
              $('#star-rate-#{review.id}').raty({
                size: 36,
                starOff:  '#{asset_path('star-off.png')}',
                starOn : '#{asset_path('star-on.png')}',
                starHalf: '#{asset_path('star-half.png')}',
                half: true,
                readOnly: true,
                score: '#{review.rate}',
              });
            %span.h-letter-space
              = review.title
            %a