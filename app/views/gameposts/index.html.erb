<main class="content">
  <div class="top-content">
    <div class="content-box">
      <div class="card">
        <% @games.each do |game| %>
        <div class="box">
        <% if @search_products %>
          <% render partial: 'products/product', collection: @search_products %>
        <% else %>
          <% render partial: 'gameposts/product', collection: @games %>
        <% end %>  
          <a class="links" href="/gameposts/<%= game.id %>"><img class="content_post" src="<%= game.image %>"></a>
            <figcaption><%= simple_format(game.name) %></figcaption>
          </div>
        <% end %>
      </div>
    <div>
  </div>  
</main>

<footer>
  <%= paginate(@games)%>
</footer>